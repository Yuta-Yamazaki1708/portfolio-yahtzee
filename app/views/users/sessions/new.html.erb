<% content_for :css do %>
  <%= stylesheet_link_tag 'registration' %>
<% end %>

<main id="main">
  <section id="contact" class="contact">
    <div class="container">
      <div class="section-title">
        <h2>ログイン</h2>
      </div>
      <div class="row mt-5 justify-content-center">
        <div class="col-lg-8 mt-5 mt-lg-0">
          <%= form_with model: @user, url: user_session_path, id: 'new_user', class: "user-form", method: :post do |f|  %>
            <%= render "users/shared/error_messages"%>
            <div class="row">
              <div class="form-group mt-3 mt-md-0">
                <%= f.email_field :email, autocomplete: "email", autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
              </div>
            </div>
            <div class="form-group mt-3">
              <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
            </div>
            <div class="row text-center justify-content-center">
              <%= f.submit "ログイン", class: "sign-up col-md-6 col-xs-10" %>
              <span>または</span>
              <button class="sign-up col-md-6 col-xs-10 mb-10">Googleアカウントでログイン</button>
              <%= link_to "新規登録", new_user_registration_path %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</main>
