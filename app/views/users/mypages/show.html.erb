<% content_for :css do %>
  <%= stylesheet_link_tag "mypage" %>
  <%= stylesheet_link_tag "turbo_form" %>
<% end %>

<main id="main">
  <section>
    <div class="section-title">
      <h2>プロフィール</h2>
    </div>
    <div class="container mypage">
      <div class="row justify-content-between">
        <div class="profile col-12 col-lg-5">

          <%= render partial: "users/mypages/profile",
            locals: { user: @user, number_of_play: @number_of_play, max_point: @max_point }
          %>

       </div>
        <div class=" col-12 col-lg-6 result">
          <%= render partial: "users/mypages/results",
            locals: { user: @user, results: @results }
          %>
        </div>
      </div>
    </div>
  </section>
</main>
