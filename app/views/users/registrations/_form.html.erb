<%= turbo_frame_tag current_user do %>
<main id="main">
  <section id="contact" class="contact">
    <div class="container">
      <div class="row mt-5 justify-content-center">
        <div class="col-lg-8 mt-5 mt-lg-0">
          <%= form_with model: current_user, url: update_profile_path(current_user), class: "user-form", method: :patch do |f|  %>
            <div class="row">
              <div class="form-group">
                <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", placeholder: "アカウント名" %>
                <% if current_user.errors.include?(:username) %>
                  <p style="color: red;"><%= current_user.errors.full_messages_for(:username).first %></p>
                <% end %>
              </div>
            </div>
            <div class="form-group mt-3">
            <%= f.label "アイコン画像" %>
              <%= f.file_field :icon, class: "form-control", accept: 'image/jpg, image/jpeg, image/png', direct_upload: true %>
              <% if current_user.errors.include?(:icon) %>
                  <p style="color: red;"><%= curren_user.errors.full_messages_for(:icon).first %></p>
              <% end %>
            </div>
            <div class="row text-center justify-content-center">
              <%= f.submit "編集を完了", class: "submit-btn col-md-8 col-xs-10" %>
              <%= link_to "戻る", profile_path(current_user), class: "col-md-8 col-xs-10" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</main>
<%end%>

