<%= turbo_stream.replace "select_players_num" do %>
  <%= form_with url: new_game_path, method: :post do |f| %>
    <%= f.select :player_num, [1, 2, 3, 4], { include_blank: "プレイ人数を選択" }, { class: "select-box col-7" } %>
    <%= f.select :times_roll, [3, 5], { include_blank: "サイコロを振れる回数を選択" }, { class: "select-box col-7" } %>
    <%= f.submit "開始する", class: "btn-link col-7" %>
  <% end %>
  <%= link_to "戻る", root_path, class: "btn-link col-7 text-center" %>
<% end %>

<%= turbo_stream.update "flash", partial: "shared/flash" %>
